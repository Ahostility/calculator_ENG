<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical"
    android:background="#E6EE9C"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/switch_but"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:freezesText="false"
            android:gravity="left|center_vertical"
            android:scaleX="1"
            android:scaleY="1"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/enter_text"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/LL_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                style="@style/EngineeringButton"
                android:id="@+id/sqrt_2x"
                android:text="@string/sqrt_2x"
                />

            <Button
                android:id="@+id/sqrt_3x"
                style="@style/EngineeringButton"
                android:text="@string/sqrt_3x" />

            <Button
                style="@style/EngineeringButton"
                android:id="@+id/plus_minus"
                android:text="±" />

            <Button
                android:id="@+id/x_2"
                style="@style/EngineeringButton"
                android:text="@string/x_2" />

            <Button
                android:id="@+id/x_3"
                style="@style/EngineeringButton"
                android:text="@string/x_3" />

            <Button

                android:id="@+id/x_y"
                style="@style/EngineeringButton"
                android:text="@string/x_y" />

            <Button
                android:id="@+id/exp_x"
                style="@style/EngineeringButton"
                android:text="@string/exp_x" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                style="@style/EngineeringButton"
                android:id="@+id/sin_x"
                android:text="@string/sin_x"/>

            <Button
                style="@style/EngineeringButton"
                android:id="@+id/cos_x"
                android:text="@string/cos_x" />

            <Button
                android:id="@+id/tan_x"
                style="@style/EngineeringButton"
                android:text="@string/tan_x" />

            <Button
                style="@style/EngineeringButton"
                android:id="@+id/ctg_x"
                android:text="@string/ctg_x"/>

            <Button
                style="@style/EngineeringButton"
                android:id="@+id/sec_x"
                android:text="@string/sec_x"/>

            <Button
                style="@style/EngineeringButton"
                android:id="@+id/cosec_x"
                android:text="@string/cosec_x"
                />

            <Button
                style="@style/EngineeringButton"
                android:id="@+id/log_x_y"
                android:text="@string/log10_x"
                />

            <Button
                style="@style/EngineeringButton"
                android:id="@+id/ln_x"
                android:text="@string/ln_x"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--Взвимозаменяемые блоки-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

<!--            <TextView-->
            <Button
                android:id="@+id/ac"
                style="@style/OperationButton"
                android:text="@string/btn_ac"
                tools:ignore="TextContrastCheck"/>

            <Button
                android:id="@+id/left"
                style="@style/OperationButton"
                android:text="@string/btn_left"/>

            <Button
                android:id="@+id/right"
                style="@style/OperationButton"
                android:text="@string/btn_right"/>

            <Button
                style="@style/ActionButton"
                android:id="@+id/div"
                android:text="@string/btn_dev" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/NumberButton"
                android:id="@+id/seven"
                android:text="@string/num_7"/>

            <Button
                style="@style/NumberButton"
                android:id="@+id/eight"
                android:text="@string/num_8"/>

            <Button
                style="@style/NumberButton"
                android:id="@+id/nine"
                android:text="@string/num_9"/>

            <Button
                style="@style/ActionButton"
                android:id="@+id/mul"
                android:text="@string/btn_mul"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                style="@style/NumberButton"
                android:text="@string/num_4"/>

            <Button
                android:id="@+id/five"
                style="@style/NumberButton"
                android:text="@string/num_5"/>

            <Button
                android:id="@+id/six"
                style="@style/NumberButton"
                android:text="@string/num_6"/>

            <Button
                style="@style/ActionButton"
                android:id="@+id/minus"
                android:text="@string/btn_sub"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/NumberButton"
                android:id="@+id/one"
                android:text="@string/num_1"/>

            <Button
                style="@style/NumberButton"
                android:id="@+id/two"
                android:text="@string/num_2"/>

            <Button
                style="@style/NumberButton"
                android:id="@+id/three"
                android:text="@string/num_3"/>

            <Button
                style="@style/ActionButton"
                android:id="@+id/plus"
                android:text="@string/btn_plus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/del_one"
                style="@style/NumberButton"
                android:text="@string/del_one_str" />

            <Button
                style="@style/NumberButton"
                android:id="@+id/Zero"
                android:text="@string/num_0"
                />

            <Button
                style="@style/NumberButton"
                android:id="@+id/Point"
                android:text="@string/btn_float" />

            <Button
                style="@style/ActionButton"
                android:id="@+id/equal"
                android:text="@string/btn_equal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>




